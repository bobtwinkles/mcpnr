/*********************************************/
/*                                           */
/* Minecraft cell library                    */
/*                                           */
/* Reed Koser                                */
/*                                           */
/* Process: none                             */
/*                                           */
/* cell area represents XZ footprint.        */
/*                                           */
/*********************************************/
library(minecraft_cells) {
  technology (cmos);
  delay_model             : table_lookup;

  revision: 1.0;

  /* Dirty hack: we use 1ps = 1ms (anying slower than picoseconds is illegal
   * per the liberty specification), and since 1 game tick is 50ms (20Hz) this
   * lets us specify delays at game-tick precision.
   */
  time_unit               : "10ps";
  capacitive_load_unit(1, pf);

  cell (gate_not.nbt) {
    area : 3;
    pin(A) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "A'";
    }
  }

  cell(gate_nand_i2.nbt) {
    area : 9;
    pin(A) {
      direction : input;
    }

    pin(B) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "(A * B)'";
    }
  }

  cell (gate_nor_i2.nbt) {
    area : 6;
    pin(A) {
      direction : input;
    }

    pin(B) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "(A + B)'";
    }
  }

  cell (gate_xor.nbt) {
    area : 9;
    pin(A) {
      direction : input;
    }

    pin(B) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "(A * B') + (A' * B)";
    }
  }

  /* XXX: ABC doesn't support multi-output gates
   */
  cell (gate_fa.nbt) {
    area : 12;
    pin(A) {
      direction : input;
    }

    pin(B) {
      direction : input;
    }

    pin(CI) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "((A * B) + (B * CI)) + (CI * A)";
    }

    pin(CO) {
      direction : output;
      function : "(A ^ B) ^ CI";
    }
  }

  /* This gate will get dropped by followup opt passes but ABC needs it for
   * techmapping */
  cell (gate_buffer) {
    area : 1;
    pin(A) {
      direction : input;
    }

    pin(Y) {
      direction : output;
      function : "A";
    }
  }
}
